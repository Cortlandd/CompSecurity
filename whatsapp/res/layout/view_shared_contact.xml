                    <TextView android:textSize="@dimen/shared_contact_title_text_size" android:textColor="@color/description_gray" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="left|center" android:id="@id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="First Lastname" android:singleLine="true" />
