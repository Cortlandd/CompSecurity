<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:padding="16.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Hardcoded synclair config:" />
    <RadioGroup android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RadioButton android:id="@id/synclair_surge_config" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Surge Config" />
        <RadioButton android:enabled="false" android:id="@id/sycnlair_charge_hrd_config" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Charge HR Config" />
        <RadioButton android:id="@id/default_config" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="None" />
    </RadioGroup>
    <Button android:id="@id/synclair_config_save" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/save" />
</LinearLayout>