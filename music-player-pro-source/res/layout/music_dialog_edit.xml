<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="10.0dip" android:stretchColumns="1">
        <TableRow>
            <TextView android:text="@string/dlg_song" />
            <EditText android:id="@id/et_music_detail_name" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/dlg_album" />
            <EditText android:id="@id/et_music_detail_album" />
        </TableRow>
        <TableRow>
            <TextView android:text="@string/dlg_artist" />
            <EditText android:id="@id/et_music_detail_artist" />
        </TableRow>
    </TableLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/btn_save_music_info" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="@string/dlg_save" android:layout_weight="1.0" />
        <Button android:id="@id/btn_cancel_music_info" android:layout_width="0.0dip" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>