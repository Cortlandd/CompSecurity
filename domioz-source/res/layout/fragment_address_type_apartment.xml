<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/addressTypeApartmentLocationContainer" android:layout_width="fill_parent" android:layout_height="@dimen/form_height">
        <TextView android:id="@id/addressTypeApartmentLocation" android:text="@string/form_apartment_name_text" style="@style/AddressTypeTextStyle" />
        <EditText android:id="@id/addressTypeApartmentLocationEntry" android:hint="@string/form_user_hint_optional" android:maxLength="@integer/address_max_length" android:layout_toRightOf="@id/addressTypeApartmentLocation" android:inputType="textCapWords" android:imeOptions="flagNoExtractUi" style="@style/AddressTypeEditTextStyle" />
        <View style="@style/AddressTypeDividerGray" />
    </RelativeLayout>
    <RelativeLayout android:id="@id/addressTypeApartmentStreetAddressContainer" android:layout_width="fill_parent" android:layout_height="@dimen/form_height">
        <TextView android:id="@id/addressTypeApartmentStreetAddress" android:text="@string/form_street_address" style="@style/AddressTypeTextStyle" />
        <EditText android:id="@id/addressTypeApartmentStreetAddressEntry" android:hint="@string/form_user_hint_required" android:maxLength="@integer/address_max_length" android:layout_toRightOf="@id/addressTypeApartmentStreetAddress" android:inputType="textCapWords" android:imeOptions="flagNoExtractUi" style="@style/AddressTypeEditTextStyle" />
        <View style="@style/AddressTypeDividerGray" />
    </RelativeLayout>
    <RelativeLayout android:id="@id/addressTypeApartmentSuitAptContainer" android:layout_width="fill_parent" android:layout_height="@dimen/form_height">
        <TextView android:id="@id/addressTypeApartmentSuitApt" android:text="@string/form_suit_apt_text" style="@style/AddressTypeTextStyle" />
        <EditText android:id="@id/addressTypeApartmentSuitAptEntry" android:hint="@string/form_user_hint_required" android:layout_toRightOf="@id/addressTypeApartmentSuitApt" android:inputType="textCapWords" android:imeOptions="flagNoExtractUi" style="@style/AddressTypeEditTextStyle" />
        <View style="@style/AddressTypeDividerGray" />
    </RelativeLayout>
    <RelativeLayout android:id="@id/addressTypeApartmentCityContainer" android:layout_width="fill_parent" android:layout_height="@dimen/form_height">
        <TextView android:id="@id/addressTypeApartmentCity" android:text="@string/city" style="@style/AddressTypeTextStyle" />
        <EditText android:id="@id/addressTypeApartmentCityEntry" android:hint="@string/form_user_hint_required" android:layout_toRightOf="@id/addressTypeApartmentCity" android:inputType="textCapWords" android:imeOptions="flagNoExtractUi" style="@style/AddressTypeEditTextStyle" />
        <View style="@style/AddressTypeDividerGray" />
    </RelativeLayout>
    <RelativeLayout android:id="@id/addressTypeApartmentStateContainer" android:layout_width="fill_parent" android:layout_height="@dimen/form_height">
        <TextView android:id="@id/addressTypeApartmentState" android:text="@string/form_delivery_state" style="@style/AddressTypeTextStyle" />
        <Spinner android:id="@id/addressTypeApartmentStateSpinner" android:background="@color/bg_form_text" android:layout_width="fill_parent" android:layout_height="@dimen/title_height" android:layout_marginLeft="@dimen/label_margin_left" android:layout_toRightOf="@id/addressTypeApartmentState" android:layout_centerVertical="true" />
        <View style="@style/AddressTypeDividerGray" />
    </RelativeLayout>
    <RelativeLayout android:id="@id/addressTypeApartmentZipContainer" android:layout_width="fill_parent" android:layout_height="@dimen/form_height">
        <TextView android:id="@id/addressTypeApartmentZip" android:text="@string/form_zip_code_text" style="@style/AddressTypeTextStyle" />
        <EditText android:id="@id/addressTypeApartmentZipEntry" android:hint="@string/form_user_hint_required" android:maxLength="@integer/address_zip_size" android:layout_toRightOf="@id/addressTypeApartmentZip" android:inputType="number" android:imeOptions="flagNoExtractUi" style="@style/AddressTypeEditTextStyle" />
        <View style="@style/AddressTypeDividerGray" />
    </RelativeLayout>
    <RelativeLayout android:id="@id/addressTypeApartmentDeliveryInstContainer" android:layout_width="fill_parent" android:layout_height="@dimen/form_height">
        <TextView android:id="@id/addressTypeApartmentDeliveryInst" android:text="@string/form_delivery_inst" style="@style/AddressTypeTextStyle" />
        <EditText android:id="@id/addressTypeApartmentDeliveryInstEntry" android:hint="@string/form_user_hint_optional" android:singleLine="true" android:maxLength="@integer/address_delivery_inst_size" android:layout_toRightOf="@id/addressTypeApartmentDeliveryInst" android:imeOptions="actionDone|flagNoExtractUi" style="@style/AddressTypeEditTextStyle" />
    </RelativeLayout>
</LinearLayout>