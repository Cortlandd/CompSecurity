<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content" android:fillViewport="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/bg_white_popup_corner" android:paddingBottom="@dimen/store_info_layout_margin" android:layout_width="@dimen/store_info_popup_dialog" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="top" android:orientation="vertical" android:background="@drawable/popup_title_bg" android:layout_width="fill_parent" android:layout_height="@dimen/store_info_title_layout_width">
            <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/white" android:id="@id/alertDialogTitleText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="@style/TitleBarText" />
        </RelativeLayout>
        <TextView android:textSize="@dimen/store_info_text_size" android:textStyle="bold" android:textColor="@color/profile_text_blue" android:layout_gravity="left" android:id="@id/storeNumberTextView" android:paddingLeft="@dimen/store_info_dialog_margin_padding" android:paddingTop="@dimen/store_info_dialog_margin_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/store_info_dialog_margin_padding" android:text="@string/store_profile_store_number" style="@style/TopShadow" />
        <TextView android:textSize="@dimen/text_size_smaller" android:layout_gravity="left" android:id="@id/storeInfoAddress" android:paddingLeft="@dimen/store_info_dialog_margin_padding" android:paddingBottom="@dimen/store_info_dialog_margin_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/address" />
        <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/store_pop_up_call_link" android:layout_gravity="left" android:id="@id/storeInfoCallStoreLink" android:paddingLeft="@dimen/store_info_dialog_margin_padding" android:paddingBottom="@dimen/store_info_dialog_margin_padding" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/call_store_link_text" />
        <RelativeLayout android:id="@id/hoursContainer" android:padding="@dimen/store_info_dialog_margin_padding" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textStyle="bold" android:textColor="@color/profile_text_blue" android:gravity="left|center" android:id="@id/deliveryHours" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/profile_delivery_hours" android:layout_toLeftOf="@id/centerPoint" />
            <TextView android:textStyle="bold" android:textColor="@color/profile_text_blue" android:gravity="left|center" android:id="@id/carryoutHours" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/profile_carryout_hours" android:layout_toRightOf="@id/centerPoint" />
            <LinearLayout android:orientation="vertical" android:id="@id/horizontalSeparator" android:background="@color/store_info_separator_bg" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_marginTop="@dimen/store_info_dialog_margin_padding" android:layout_marginBottom="@dimen/store_info_dialog_margin_padding" android:layout_below="@id/deliveryHours" />
            <LinearLayout android:orientation="vertical" android:id="@id/centerPoint" android:layout_width="0.0px" android:layout_height="0.0px" android:layout_margin="@dimen/store_info_center_point_layout" android:layout_centerInParent="true" />
            <TextView android:textSize="@dimen/text_size_smaller" android:textColor="@android:color/black" android:gravity="left" android:id="@id/storeInfoDeliveryHours" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/delivery_hours" android:layout_below="@id/horizontalSeparator" android:layout_alignRight="@id/deliveryHours" android:layout_alignParentLeft="true" />
            <TextView android:textSize="@dimen/text_size_smaller" android:textColor="@android:color/black" android:gravity="left" android:id="@id/storeInfoCarryoutHours" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/carryout_hours" android:layout_below="@id/horizontalSeparator" android:layout_alignLeft="@id/carryoutHours" android:layout_alignParentRight="true" />
        </RelativeLayout>
        <Button android:textSize="@dimen/text_size_small" android:textStyle="bold" android:id="@id/storeInfoGotItButton" android:background="@drawable/red_button_enabled" android:layout_width="@dimen/store_info_button_width" android:layout_height="@dimen/store_info_button_height" android:text="@string/common_got_it_thanks" style="@style/ButtonStyle" />
    </LinearLayout>
</ScrollView>