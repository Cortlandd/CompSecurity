<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/anonymousPersonalInfoLayout" android:background="@drawable/login_table_border" android:padding="1.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/tableContainer" android:background="@drawable/bg_card" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <EditText android:id="@id/checkout_form_first_name" android:background="@drawable/table_button_top" android:hint="@string/checkout_form_first_name" android:singleLine="true" android:maxLength="20" android:imeOptions="flagNoExtractUi" style="@style/TableStyle">
            <requestFocus />
        </EditText>
        <LinearLayout android:orientation="horizontal" android:background="@color/grey_down" style="@style/TableDivider" />
        <EditText android:id="@id/checkout_form_last_name" android:background="@drawable/table_button_middle" android:layout_width="fill_parent" android:hint="@string/checkout_form_last_name" android:singleLine="true" android:maxLength="20" android:imeOptions="flagNoExtractUi" style="@style/TableStyle" />
        <LinearLayout android:orientation="horizontal" android:background="@color/grey_down" style="@style/TableDivider" />
        <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <EditText android:id="@id/checkout_form_phone_number" android:background="@drawable/table_button_middle" android:layout_width="wrap_content" android:hint="@string/checkout_form_phone_number" android:maxLength="10" android:layout_toLeftOf="@id/checkout_form_phone_extension" android:layout_alignParentLeft="true" android:inputType="number" android:imeOptions="flagNoExtractUi" style="@style/TableStyle" />
            <EditText android:gravity="right" android:id="@id/checkout_form_phone_extension" android:background="@drawable/table_button_middle" android:layout_width="wrap_content" android:hint="@string/ext" android:maxLength="6" android:layout_alignParentRight="true" android:inputType="number" android:imeOptions="flagNoExtractUi" style="@style/TableStyle" />
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:background="@color/grey_down" style="@style/TableDivider" />
        <EditText android:id="@id/checkout_form_email" android:background="@drawable/table_button_bottom" android:hint="@string/checkout_form_email" android:maxLength="120" android:inputType="textEmailAddress" android:imeOptions="flagNoExtractUi" style="@style/TableStyle" />
        <LinearLayout android:orientation="horizontal" android:id="@id/checkout_form_delivery_instructions_divider" android:background="@color/grey_down" style="@style/TableDivider" />
        <EditText android:id="@id/checkout_form_delivery_instructions" android:background="@drawable/table_button_bottom" android:hint="@string/hint_del_instructions_big" android:singleLine="true" android:maxLength="30" android:imeOptions="actionDone|flagNoExtractUi" style="@style/TableStyle" />
    </LinearLayout>
</LinearLayout>