        <com.jcp.views.TypefaceTextView android:textSize="@dimen/reward_font_size_16" android:textColor="@color/black" android:id="@id/barcode_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/barcode" android:layout_centerHorizontal="true" app:customTypeface="GOTHAM_BOOK" />
    </RelativeLayout>
</LinearLayout>