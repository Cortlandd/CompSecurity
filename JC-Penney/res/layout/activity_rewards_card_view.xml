<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:id="@id/header" android:background="@color/rewards_light_gray" android:layout_width="fill_parent" android:layout_height="@dimen/reward_header_height">
        <com.jcp.views.TypefaceTextView android:textSize="@dimen/reward_font_size_20" android:textColor="@color/white" android:id="@id/ca_policy_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/reward_margin_10" android:text="@string/text_shopping_bag_rewards" android:layout_centerVertical="true" app:customTypeface="GOTHAM_MEDIUM" />
        <ImageView android:id="@id/close_btn" android:padding="@dimen/reward_padding_18" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/white_close" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@null" />
    </RelativeLayout>
    <ImageView android:id="@id/reward_card" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/reward_margin_40" android:src="@drawable/reward_card" android:layout_below="@id/header" android:layout_centerHorizontal="true" />
    <ImageView android:id="@id/barcode" android:layout_width="@dimen/reward_barcode_width_in_portrait" android:layout_height="@dimen/reward_barcode_height_in_portrait" android:layout_marginTop="@dimen/reward_margin_5" android:layout_below="@id/reward_card" android:layout_centerHorizontal="true" />
    <com.jcp.views.TypefaceTextView android:textSize="@dimen/reward_font_size_16" android:textColor="@color/black" android:id="@id/barcode_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="123445" android:layout_below="@id/barcode" android:layout_centerHorizontal="true" app:customTypeface="GOTHAM_BOOK" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <com.jcp.views.TypefaceTextView android:textSize="@dimen/reward_font_size_18" android:textStyle="bold" android:textColor="@color/black" android:layout_gravity="center_horizontal" android:id="@id/member_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/reward_margin_10" android:layout_centerInParent="true" app:customTypeface="GOTHAM_BOLD" />
        <View android:id="@id/divider" android:background="@android:color/darker_gray" android:layout_width="fill_parent" android:layout_height="@dimen/reward_devider_heght" android:layout_marginLeft="@dimen/reward_padding_25" android:layout_marginRight="@dimen/reward_padding_25" android:layout_marginBottom="@dimen/reward_margin_10" />
        <com.jcp.views.TypefaceTextView android:textSize="@dimen/reward_font_size_16" android:textColor="@color/black" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@id/earn_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/reward_margin_35" app:customTypeface="GOTHAM_BOOK" />
    </LinearLayout>
</RelativeLayout>