<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/chat_menu" android:background="@color/background_gray_color" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_alignParentBottom="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/chat_snapcode_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap_5x" android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
        <ImageView android:layout_gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/profile_qr_ghost" />
        <FrameLayout android:layout_gravity="center" android:id="@id/snapcode_border_container" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ImageView android:layout_gravity="center" android:id="@id/chat_snapcode_border_square" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            <ProgressBar android:layout_gravity="center" android:id="@id/chat_snapcode_progress_bar" android:layout_width="@dimen/icon_size" android:layout_height="@dimen/icon_size" />
            <ImageView android:layout_gravity="center" android:id="@id/chatburger_profile_picture" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" android:contentDescription="@string/content_description_no_profile_picture" />
            <com.caverock.androidsvg.SVGImageView android:layout_gravity="center" android:id="@id/chat_snapcode" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        </FrameLayout>
    </FrameLayout>
    <TextView android:textSize="@dimen/chat_menu_display_name_text_size" android:textColor="@color/primary_black" android:ellipsize="end" android:gravity="center_horizontal" android:id="@id/chat_menu_display_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_gap_2x" android:layout_marginTop="@dimen/chat_menu_display_name_top_margin" android:layout_marginRight="@dimen/default_gap_2x" android:maxLines="2" android:layout_below="@id/chat_snapcode_container" android:layout_centerHorizontal="true" />
    <TextView android:textSize="@dimen/chat_menu_username_and_score_text_size" android:textColor="@color/secondary_black" android:id="@id/chat_menu_username_and_score" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_gap_2_5x" android:layout_marginTop="@dimen/default_gap_1_5x" android:layout_marginRight="@dimen/default_gap_2_5x" android:layout_below="@id/chat_menu_display_name" android:layout_centerHorizontal="true" />
    <com.snapchat.android.ui.EmojiTextView android:textSize="@dimen/chat_menu_emoji_size" android:id="@id/chat_menu_friendmojis" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_gap_2_5x" android:layout_marginTop="@dimen/default_gap_1_5x" android:layout_marginRight="@dimen/default_gap_2_5x" android:layout_below="@id/chat_menu_username_and_score" android:layout_centerHorizontal="true" />
    <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
        <View android:background="@color/chat_menu_divider_grey" android:layout_width="fill_parent" android:layout_height="@dimen/chat_menu_option_divider_width" />
        <TableRow android:id="@id/chat_menu_edit_name_button" android:paddingTop="@dimen/chat_menu_option_padding" android:paddingBottom="@dimen/chat_menu_option_padding" android:layout_width="wrap_content" android:layout_height="@dimen/chat_menu_option_container_height">
            <ImageView android:layout_gravity="center_vertical" android:layout_width="@dimen/chat_menu_option_icon_size" android:layout_height="@dimen/chat_menu_option_icon_size" android:layout_marginLeft="@dimen/chat_menu_option_left_margin" android:layout_marginRight="@dimen/chat_menu_option_margin_between_icon_and_text" android:src="@drawable/chat_edit_name" android:scaleType="centerInside" />
            <TextView android:textSize="@dimen/chat_menu_option_font_size" android:textColor="@color/primary_black" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chat_menu_edit_name_title" />
        </TableRow>
        <View android:background="@color/chat_menu_divider_grey" android:layout_width="fill_parent" android:layout_height="@dimen/chat_menu_option_divider_width" />
        <TableRow android:id="@id/chat_menu_block_button" android:paddingTop="@dimen/chat_menu_option_padding" android:paddingBottom="@dimen/chat_menu_option_padding" android:layout_width="wrap_content" android:layout_height="@dimen/chat_menu_option_container_height">
            <FrameLayout android:layout_gravity="center_vertical" android:id="@id/chat_menu_block_progress_view" android:layout_width="@dimen/chat_menu_option_icon_size" android:layout_height="@dimen/chat_menu_option_icon_size" android:layout_marginLeft="@dimen/chat_menu_option_left_margin" android:layout_marginRight="@dimen/chat_menu_option_margin_between_icon_and_text" android:src="@drawable/chat_block_user">
                <ImageView android:layout_gravity="center" android:id="@id/chat_menu_block_icon" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/chat_block_user" android:scaleType="centerInside" />
                <ProgressBar android:layout_gravity="center" android:id="@id/chat_menu_block_progress_bar" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            </FrameLayout>
            <TextView android:textSize="@dimen/chat_menu_option_font_size" android:textColor="@color/primary_black" android:layout_gravity="center_vertical" android:id="@id/chat_menu_block_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chat_menu_block_title" />
        </TableRow>
        <View android:background="@color/chat_menu_divider_grey" android:layout_width="fill_parent" android:layout_height="@dimen/chat_menu_option_divider_width" />
        <TableRow android:id="@id/chat_menu_add_remove_friend_button" android:paddingTop="@dimen/chat_menu_option_padding" android:paddingBottom="@dimen/chat_menu_option_padding" android:layout_width="wrap_content" android:layout_height="@dimen/chat_menu_option_container_height">
            <FrameLayout android:layout_gravity="center_vertical" android:id="@id/chat_menu_add_remove_friend_progress_view" android:layout_width="@dimen/chat_menu_option_icon_size" android:layout_height="@dimen/chat_menu_option_icon_size" android:layout_marginLeft="@dimen/chat_menu_option_left_margin" android:layout_marginRight="@dimen/chat_menu_option_margin_between_icon_and_text">
                <ImageView android:layout_gravity="center" android:id="@id/chat_menu_add_remove_friend_icon" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/chat_remove_friend" android:scaleType="centerInside" />
                <ProgressBar android:layout_gravity="center" android:id="@id/chat_menu_add_friend_progress_bar" android:layout_width="fill_parent" android:layout_height="fill_parent" />
            </FrameLayout>
            <TextView android:textSize="@dimen/chat_menu_option_font_size" android:textColor="@color/primary_black" android:layout_gravity="center_vertical" android:id="@id/chat_menu_add_remove_friend_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chat_menu_remove_friend_title" />
        </TableRow>
    </TableLayout>
</RelativeLayout>