    <ImageView android:id="@id/lens_img" android:background="@drawable/lens_purchase_dialog_icon_bg" android:padding="@dimen/default_gap_half" android:layout_width="@dimen/lens_purchase_dialog_icon_bg_size" android:layout_height="@dimen/lens_purchase_dialog_icon_bg_size" android:layout_centerHorizontal="true" />
</RelativeLayout>