<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:padding="@dimen/default_spacing" style="@style/Card.Touchable"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout style="@style/ListItemPrimaryAction">
        <ImageView android:id="@id/loyalty_ProgramLogo" android:contentDescription="@string/loyalty_program_logo_description" style="@style/ListItemPrimaryActionIcon" />
    </LinearLayout>
    <LinearLayout android:layout_gravity="top" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:ellipsize="end" android:id="@id/loyalty_MerchantName" android:bufferType="spannable" android:singleLine="true" android:includeFontPadding="false" style="@style/ListItemPrimaryText" />
        <TextView android:ellipsize="end" android:id="@id/loyalty_ProgramName" android:bufferType="spannable" android:singleLine="true" style="@style/ListItemSecondaryText" />
        <TextView android:ellipsize="end" android:id="@id/loyalty_CallToActionLink" android:layout_width="fill_parent" android:layout_height="wrap_content" android:bufferType="spannable" android:singleLine="true" style="@style/ListItemSecondaryText" />
    </LinearLayout>
</LinearLayout>