<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:wallet="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="horizontal" android:id="@id/SingleRequestSummary" android:paddingRight="@dimen/default_spacing" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.google.android.apps.wallet.widgets.roundedimage.RoundedImage android:id="@id/SingleRequesterPhoto" android:layout_width="@dimen/list_item_primary_action" android:layout_height="wrap_content" android:layout_marginRight="@dimen/default_spacing" wallet:defaultImage="@drawable/img_avatar_circle_color_40dp" />
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@id/SingleRequestHeader" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/ListItemPrimaryText" />
            <TextView android:id="@id/SingleMemo" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/ListItemSecondaryText" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="right" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/DeclineRequestLink" android:text="@string/request_money_decline_button" style="@style/FlatButton.Secondary" />
        <Button android:id="@id/SettleUpLink" android:text="@string/request_money_settle_up_button" style="@style/FlatButton" />
    </LinearLayout>
</LinearLayout>