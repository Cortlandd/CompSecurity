<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="#cc000000" android:endColor="#22000000" android:angle="90.0" android:centerX="0.1" android:centerColor="#22000000" />
                </shape>
            </item>
            <item>
                <shape>
                    <gradient android:startColor="#cc000000" android:endColor="#22000000" android:angle="270.0" android:centerX="0.1" android:centerColor="#22000000" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>