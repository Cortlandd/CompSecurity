            <ImageView android:id="@id/service_icon_left" android:padding="@dimen/size_1x" android:paddingRight="@dimen/padding3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/skype_credit" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
