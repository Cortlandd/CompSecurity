<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/skype_blue" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical" android:id="@id/mnv_learn_more_linear_layout" android:paddingRight="@dimen/padding7b" android:layout_width="fill_parent" android:layout_height="@dimen/action_bar_height" android:showDividers="beginning">
        <ImageView android:layout_gravity="center" android:id="@id/mnv_learn_more_left_arrow" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding3b" android:layout_marginRight="@dimen/padding2b" android:src="@drawable/big_arrow_left_white" />
        <TextView android:textSize="@dimen/font_medium" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@id/mnv_learn_more_add_friends_link" android:clickable="false" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/label_mnv_add_your_friends" />
    </LinearLayout>
    <ScrollView android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/mnv_learn_more_linear_layout">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/mnv_learn_more_parent_linear_layout" android:paddingLeft="@dimen/mnv_content_text_side_padding" android:paddingRight="@dimen/mnv_content_text_side_padding" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:id="@id/mnv_learn_more_friends_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding3b" android:src="@drawable/mnv_learn_addcontacts" />
            <TextView android:id="@id/mnv_learn_more_address_book" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_mnv_learn_more_address_book" style="@style/TermsOfUseStandardText" />
            <ImageView android:id="@id/mnv_learn_more_on_off_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding3b" android:src="@drawable/mnv_learn_switchoff" />
            <TextView android:id="@id/mnv_learn_more_on_off" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_mnv_learn_more_on_off" style="@style/TermsOfUseStandardText" />
            <ImageView android:id="@id/mnv_learn_more_settings_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding3b" android:src="@drawable/mnv_learn_settings" />
            <TextView android:id="@id/mnv_learn_more_settings" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_mnv_learn_more_settings" style="@style/TermsOfUseStandardText" />
            <TextView android:textSize="@dimen/font_small_medium" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@id/mnv_learn_more_privacy_policy" android:clickable="true" android:layout_width="fill_parent" android:layout_height="@dimen/rounded_button_height" android:layout_marginTop="@dimen/padding2b" android:text="@string/link_mnv_learn_more_privacy_policy" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>