<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Area" />
    <Spinner android:id="@id/bug_area" android:layout_width="fill_parent" android:layout_height="wrap_content" android:drawSelectorOnTop="true" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Title" />
    <com.skype.android.widget.FocusableEditText android:id="@id/bug_title" android:layout_width="fill_parent" android:layout_height="fill_parent" android:inputType="textCapSentences" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Description/Steps to reproduce" />
    <com.skype.android.widget.FocusableEditText android:id="@id/bug_description" android:layout_width="fill_parent" android:layout_height="fill_parent" android:minLines="3" android:inputType="textCapSentences" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Expected Behavior:" />
    <com.skype.android.widget.FocusableEditText android:id="@id/bug_expected_behavior" android:layout_width="fill_parent" android:layout_height="fill_parent" android:inputType="textCapSentences" />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Actual Behavior:" />
    <com.skype.android.widget.FocusableEditText android:id="@id/bug_actual_behavior" android:layout_width="fill_parent" android:layout_height="fill_parent" android:inputType="textCapSentences" />
    <CheckBox android:layout_gravity="center_horizontal" android:id="@id/bug_include_screenshot" android:layout_width="wrap_content" android:layout_height="fill_parent" android:checked="true" android:text="Include screenshot" />
</LinearLayout>