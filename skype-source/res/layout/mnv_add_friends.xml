<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/skype_blue" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@id/mnv_not_now_buttons" layout="@layout/mnv_not_now" />
    <LinearLayout android:orientation="vertical" android:id="@id/mnv_add_friends_text_wrap" android:paddingLeft="@dimen/mnv_content_text_side_padding" android:paddingRight="@dimen/mnv_content_text_side_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/mnv_not_now_buttons">
        <TextView android:textSize="@dimen/font_large" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@id/mnv_add_friends_title_text" android:clickable="false" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mnv_add_number_text_top_padding" android:text="@string/label_mnv_add_your_friends" />
        <TextView android:textSize="@dimen/font_small_medium" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@id/mnv_add_friends_description" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/padding3b" android:text="@string/text_mnv_add_friends_description_existing_user" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/mnv_add_friends_image_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mnv_add_friends_image_gap" android:layout_below="@id/mnv_add_friends_text_wrap" android:layout_centerHorizontal="true">
        <ImageView android:id="@id/mnv_add_friends_address_book_image" android:layout_width="@dimen/mnv_add_friends_image_height" android:layout_height="@dimen/mnv_add_friends_image_height" android:src="@drawable/mnv_address_book" android:scaleType="centerCrop" />
        <ImageView android:layout_gravity="center_vertical" android:id="@id/mnv_add_friends_dots_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding5" android:layout_marginRight="@dimen/padding5" android:src="@drawable/big_arrow_right_white" />
        <ImageView android:id="@id/mnv_add_friends_skype_logo_image" android:layout_width="@dimen/mnv_add_friends_image_height" android:layout_height="@dimen/mnv_add_friends_image_height" android:src="@drawable/mnv_skype_icon" android:scaleType="centerCrop" />
    </LinearLayout>
    <Button android:id="@id/mnv_add_friends_button" android:layout_width="@dimen/mnv_button_width" android:layout_height="@dimen/rounded_button_height" android:layout_marginBottom="@dimen/mnv_bottom_button_margin" android:text="@string/label_mnv_add_friends" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" style="@style/ButtonOnBluePositive" />
    <ImageButton android:id="@id/next_button" android:background="@drawable/btn_on_blue_big_circle_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/mnv_bottom_button_margin" android:src="@drawable/continue_arrow_right_selector" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:contentDescription="@string/label_mnv_add_friends" />
</RelativeLayout>