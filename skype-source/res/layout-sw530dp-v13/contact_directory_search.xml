<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:id="@id/input_wrapper" android:background="@color/skype_blue" android:layout_width="fill_parent" android:layout_height="@dimen/contact_search_wrapper_height">
        <ImageButton android:id="@id/back_button" android:background="@null" android:layout_width="wrap_content" android:layout_height="fill_parent" android:src="@drawable/ab_back_button_white" android:layout_alignParentLeft="true" android:contentDescription="@string/acc_back" />
        <com.skype.android.widget.AccessibleEditText android:textSize="@dimen/font_extra_large" android:textColor="@color/white" android:textColorHint="@color/skype_hint_color" android:id="@id/input" android:background="@color/transparent" android:layout_width="fill_parent" android:layout_height="fill_parent" android:hint="@string/text_hint_search_add_people" android:singleLine="true" android:layout_toLeftOf="@id/erase_input" android:layout_toRightOf="@id/back_button" android:layout_centerVertical="true" android:inputType="textNoSuggestions" android:imeOptions="actionSearch" android:imeActionLabel="@string/label_search" android:textCursorDrawable="@null" />
        <ImageButton android:id="@id/erase_input" android:background="@drawable/btn_blue_on_blue_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitXY" android:layout_toLeftOf="@id/search_button" android:layout_centerVertical="true" android:contentDescription="@string/acc_clear_seach_box_button" />
        <ImageButton android:id="@id/search_button" android:background="@color/transparent" android:paddingLeft="@dimen/padding3" android:paddingRight="@dimen/padding3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/input_search_disabled" android:layout_alignTop="@id/input" android:layout_alignBottom="@id/input" android:layout_alignParentRight="true" android:contentDescription="@string/acc_search_button" />
    </RelativeLayout>
    <TextView android:textSize="@dimen/font_large" android:textColor="@color/skype_blue" android:id="@id/search_results_header" android:paddingLeft="@dimen/padding5" android:paddingTop="@dimen/padding9" android:paddingBottom="@dimen/padding9" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/message_search_results_tablet" android:layout_below="@id/input_wrapper" />
    <ProgressBar android:id="@id/progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/search_results_header" android:layout_alignTop="@id/search_results_header" android:layout_alignBottom="@id/search_results_header" />
    <LinearLayout android:orientation="vertical" android:id="@id/empty_search_wrapper" android:paddingLeft="@dimen/padding13" android:paddingTop="@dimen/padding9" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/search_results_header">
        <TextView android:textSize="@dimen/font_medium" android:textColor="@color/skype_light_grey" android:id="@id/empty_search" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/message_search_results_place_holder_tablet" android:contentDescription="@string/acc_find_people_search_results_place_holder" />
        <Button android:id="@id/empty_search_autobuddy_button" android:background="@drawable/focus_highlight" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/text_contacts_empty_add_link" android:layout_centerHorizontal="true" style="@style/EmptyViewClickableText" />
    </LinearLayout>
    <com.skype.android.widget.recycler.TwoWayRecyclerView android:id="@id/list" android:background="@color/transparent" android:paddingBottom="@dimen/padding5" android:layout_width="fill_parent" android:layout_height="fill_parent" android:cacheColorHint="@color/main_light_color" android:horizontalSpacing="@dimen/padding2" android:verticalSpacing="@dimen/padding2" android:stretchMode="spacingWidth" android:columnWidth="@dimen/list_item_width" android:numColumns="@integer/list_items_count_per_row" android:rowHeight="@dimen/list_item_height" android:maxRows="@integer/list_items_count_per_row" android:layout_below="@id/empty_search_wrapper" app:measureChild="false" />
    <LinearLayout android:orientation="vertical" android:id="@id/search_facepile_wrapper" android:paddingLeft="@dimen/directory_search_margin" android:paddingTop="@dimen/padding7" android:paddingRight="@dimen/directory_search_margin" android:visibility="invisible" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@id/empty_search_wrapper">
        <TextView android:textSize="@dimen/font_small_medium" android:textColor="@color/skype_blue" android:id="@id/search_facepile_prompt" android:paddingBottom="@dimen/padding3" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/text_add_these_people_on_skype" />
        <com.skype.android.widget.FacepileTileView android:gravity="left" android:layout_gravity="center_horizontal" android:id="@id/search_facepile" android:paddingBottom="@dimen/padding2" android:clickable="false" android:layout_width="fill_parent" android:layout_height="wrap_content" app:tileWidth="@dimen/tile_width" app:tileHeight="@dimen/tile_height" app:tileSpacing="@dimen/tile_spacing" app:tileLayout="rectangular" />
    </LinearLayout>
    <TextView android:textSize="@dimen/font_large" android:id="@id/invite_friends_text" android:background="@drawable/focus_highlight" android:paddingTop="@dimen/padding3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/directory_search_margin" android:text="@string/action_invite_friends" android:layout_below="@id/search_facepile_wrapper" style="@style/EmptyViewClickableText" />
</RelativeLayout>