<?xml version="1.0" encoding="utf-8"?>
<selector android:variablePadding="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="false" android:drawable="@drawable/focus_highlight" />
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/skype_blue_with_20_percent_transparency" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/skype_blue" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/skype_blue" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/skype_blue_with_20_percent_transparency" />
        </shape>
    </item>
</selector>