<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="false" android:drawable="@drawable/focus_highlight" />
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/skype_blue_with_50_percent_transparency" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/button_bg_on_white_positive_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/button_bg_on_white_positive_idle" />
        </shape>
    </item>
</selector>