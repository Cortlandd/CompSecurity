<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <size android:height="@dimen/rounded_big_button_height" android:width="@dimen/rounded_big_button_height" />
            <solid android:color="@color/button_bg_on_blue_positive_idle" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size android:height="@dimen/rounded_big_button_height" android:width="@dimen/rounded_big_button_height" />
            <solid android:color="@color/button_bg_on_blue_positive_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:height="@dimen/rounded_big_button_height" android:width="@dimen/rounded_big_button_height" />
            <solid android:color="@color/button_bg_on_blue_positive_idle" />
        </shape>
    </item>
</selector>