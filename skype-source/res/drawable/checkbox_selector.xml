<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:drawable="@drawable/checkbox_on_blue_circle" />
    <item android:state_checked="false" android:state_pressed="true">
        <shape android:shape="oval">
            <size android:height="@dimen/checkbox_size" android:width="@dimen/checkbox_size" />
            <solid android:color="@color/transparent" />
            <stroke android:width="1.0dip" android:color="@color/skype_blue" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:height="@dimen/checkbox_size" android:width="@dimen/checkbox_size" />
            <solid android:color="@color/transparent" />
            <stroke android:width="1.0dip" android:color="@color/skype_blue" />
        </shape>
    </item>
</selector>