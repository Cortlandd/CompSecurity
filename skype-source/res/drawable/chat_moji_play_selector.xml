<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/white_with_50_percent_transparency" />
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@drawable/focus_highlight" />
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/white_with_50_percent_transparency" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="@dimen/chat_moji_symbol_circle_stroke" android:color="@color/white" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</selector>