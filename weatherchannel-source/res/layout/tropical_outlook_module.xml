<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/module_layout"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:weather="http://schemas.android.com/apk/res-auto">
    <com.weather.commons.ui.fonts.TextViewWithFont android:id="@id/tropical_outlook_header" android:text="@string/tropical_outlook_title" android:layout_alignParentLeft="true" style="@style/module_header" />
    <LinearLayout android:orientation="horizontal" android:id="@id/tropical_outlook_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_below="@id/tropical_outlook_header">
        <LinearLayout android:orientation="vertical" android:id="@id/atlantic_basin_layout" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="1.0">
            <ImageView android:id="@id/atlantic_basin_image" android:layout_width="fill_parent" android:layout_height="fill_parent" android:adjustViewBounds="true" android:contentDescription="@string/atlantic_basin" />
            <com.weather.commons.ui.fonts.TextViewWithFont android:textColor="@color/hurricane_central_card_item_text_foreground" android:gravity="center" android:layout_gravity="bottom|center" android:background="@color/hurricane_central_card_item_text_background" android:paddingLeft="@dimen/hurricane_central_card_item_text_padding" android:paddingRight="@dimen/hurricane_central_card_item_text_padding" android:layout_width="fill_parent" android:layout_height="@dimen/hurricane_central_card_item_textview_height" android:text="@string/atlantic" weather:font="Roboto-Medium.ttf" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@id/eastern_pacific_basin_layout" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/hurricane_central_card_item_layout_margin_left" android:layout_weight="1.0">
            <ImageView android:id="@id/eastern_pacific_basin_image" android:layout_width="fill_parent" android:layout_height="fill_parent" android:adjustViewBounds="true" android:contentDescription="@string/eastern_pacific_basin" />
            <com.weather.commons.ui.fonts.TextViewWithFont android:textColor="@color/hurricane_central_card_item_text_foreground" android:gravity="center" android:layout_gravity="bottom|center" android:background="@color/hurricane_central_card_item_text_background" android:paddingLeft="@dimen/hurricane_central_card_item_text_padding" android:paddingRight="@dimen/hurricane_central_card_item_text_padding" android:layout_width="fill_parent" android:layout_height="@dimen/hurricane_central_card_item_textview_height" android:text="@string/eastern_pacific" weather:font="Roboto-Medium.ttf" />
        </LinearLayout>
    </LinearLayout>
    <Space android:layout_width="fill_parent" android:layout_height="@dimen/hurricane_central_card_bottom_spacer_height" android:layout_below="@id/tropical_outlook_layout" />
</RelativeLayout>