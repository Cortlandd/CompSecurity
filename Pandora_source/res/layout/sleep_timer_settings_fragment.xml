<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:background="@color/settings_background" android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:pandora="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.pandora.android.view.RoundLinearLayout android:id="@id/sleep_timer_group" android:layout_marginTop="@dimen/settings_row_margin" pandora:roundedCorners="all" style="@style/settings_row_style">
            <TextView android:textStyle="italic" android:id="@id/sleep_timer_time_left" android:focusable="false" android:clickable="false" android:text="@string/sleep_timer_line_2_empty" android:layout_weight="1.0" style="@style/settings_row_label" />
