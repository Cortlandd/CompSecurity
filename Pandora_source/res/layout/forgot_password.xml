<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:fitsSystemWindows="true" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:pandora="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/form_holder" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:id="@id/signin_pandora_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pandora_logo" android:contentDescription="@string/cd_pandora_logo" />
                <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@id/email_fields" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/signin_registration_row_margin">
                    <com.pandora.android.view.ValidatingEditText android:id="@id/forgot_email" android:layout_width="@dimen/forgot_password_input_width" android:layout_height="wrap_content" android:hint="@string/edittext_hint_email" android:drawableLeft="@drawable/edittext_email_left_drawable_selector" android:drawableRight="@drawable/edittext_close_drawable_selector" android:drawablePadding="@dimen/validate_edit_text_drawable_padding" android:inputType="textEmailAddress" style="@style/SignInEditText" />
                    <View android:layout_gravity="bottom" android:layout_margin="0.0dip" style="@style/SigninRegistrationRowDividerStyle" />
                </LinearLayout>
                <Button android:layout_gravity="center" android:id="@id/button_forgot_submit" android:layout_width="@dimen/forgot_password_button_width" android:layout_height="wrap_content" android:layout_marginTop="@dimen/sign_up_buttons_margin_top" android:text="@string/forgot_submit_button" style="@style/PandoraWireButton" />
                <TextView android:gravity="center" android:layout_gravity="center" android:id="@id/forgot_email_label" android:layout_width="@dimen/forgot_password_input_width" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/forgot_pass_text_margin" android:layout_marginTop="@dimen/sign_up_buttons_margin_top" android:layout_marginRight="@dimen/forgot_pass_text_margin" android:text="@string/label_forgot_email" style="@style/info_text_small_white" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>