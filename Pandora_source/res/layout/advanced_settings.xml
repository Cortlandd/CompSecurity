<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/blue_bar_layout" android:background="@color/settings_background" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:pandora="http://schemas.android.com/apk/res-auto">
    <ScrollView android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textStyle="bold" android:paddingLeft="@dimen/settings_row_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/settings_row_margin" android:text="@string/cell_audio_quality" style="@style/settings_text_large" />
            <com.pandora.android.view.RoundLinearLayout pandora:roundedCorners="all" style="@style/settings_row_style">
                <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/settings_row_margin">
                    <CheckBox android:id="@id/higher_audio_quality_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/checkmark_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                    <TextView android:id="@id/higher_audio_quality_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/higher_audio_quality" android:layout_toLeftOf="@id/higher_audio_quality_switch" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" style="@style/settings_text_large" />
                    <TextView android:textColor="@color/settings_text_color_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cell_audio_quality_help" android:layout_toLeftOf="@id/higher_audio_quality_switch" android:layout_below="@id/higher_audio_quality_text" android:layout_alignParentLeft="true" style="@style/settings_text_medium" />
                </RelativeLayout>
            </com.pandora.android.view.RoundLinearLayout>
            <TextView android:textStyle="bold" android:paddingLeft="@dimen/settings_row_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/settings_row_margin" android:text="@string/screen_auto_lock" style="@style/settings_text_large" />
            <com.pandora.android.view.RoundLinearLayout pandora:roundedCorners="all" style="@style/settings_row_style">
                <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/settings_row_margin">
                    <CheckBox android:id="@id/conserve_battery_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/checkmark_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                    <TextView android:id="@id/conserve_battery_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/conserve_battery" android:layout_toLeftOf="@id/conserve_battery_switch" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" style="@style/settings_text_large" />
                    <TextView android:textColor="@color/settings_text_color_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/screen_auto_lock_help" android:layout_toLeftOf="@id/conserve_battery_switch" android:layout_below="@id/conserve_battery_text" android:layout_alignParentLeft="true" style="@style/settings_text_medium" />
                </RelativeLayout>
            </com.pandora.android.view.RoundLinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/artist_audio_message" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:paddingLeft="@dimen/settings_row_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/settings_row_margin" android:text="@string/artist_audio_messages" style="@style/settings_text_large" />
                <com.pandora.android.view.RoundLinearLayout android:id="@id/artist_audio_message_row" pandora:roundedCorners="all" style="@style/settings_row_style">
                    <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/settings_row_margin">
                        <TextView android:id="@id/enable_artist_audio_messages_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/artist_audio_playing_qty_messages" android:layout_toLeftOf="@id/enable_artist_audio_messages_state" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/settings_text_large" />
                        <TextView android:gravity="center" android:id="@id/enable_artist_audio_messages_state" android:layout_width="32.0dip" android:layout_height="wrap_content" android:text="@string/on" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/settings_text_large" />
                    </RelativeLayout>
                </com.pandora.android.view.RoundLinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/automotive_group" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:paddingLeft="@dimen/settings_row_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/settings_row_margin" android:text="@string/bluetooth_for_devices" style="@style/settings_text_large" />
                <com.pandora.android.view.RoundLinearLayout pandora:roundedCorners="all" style="@style/settings_row_style">
                    <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/settings_row_margin">
                        <CheckBox android:id="@id/enable_bluetooth_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/checkmark_selector" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                        <TextView android:id="@id/enable_automatic_launch_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/enable_automatic_launch" android:layout_toLeftOf="@id/enable_bluetooth_switch" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" style="@style/settings_text_large" />
                        <TextView android:textColor="@color/settings_text_color_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/automatic_launch_help" android:layout_toLeftOf="@id/enable_bluetooth_switch" android:layout_below="@id/enable_automatic_launch_text" android:layout_alignParentLeft="true" style="@style/settings_text_medium" />
                    </RelativeLayout>
                </com.pandora.android.view.RoundLinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/pandora_link_group" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:paddingLeft="@dimen/settings_row_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/settings_row_margin" android:text="@string/pandora_link_settings_title" style="@style/settings_text_large" />
                <com.pandora.android.view.RoundLinearLayout pandora:roundedCorners="all" style="@style/settings_row_style">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/settings_row_margin" android:layout_marginTop="@dimen/settings_row_margin" android:layout_marginBottom="@dimen/settings_row_margin" android:text="@string/pandoralink_status_label" android:layout_weight="1.0" style="@style/settings_text_large" />
                    <Button android:id="@id/launch_pandora_link_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/settings_row_margin" android:text="launch" style="@style/PandoraDarkBlueButton" />
                </com.pandora.android.view.RoundLinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>