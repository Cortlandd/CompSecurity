    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/library_margin_large">
        <TextView android:id="@id/library_header_followers_count" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/library_metadata_cell" />
        <TextView android:textSize="@dimen/text_caption" android:textColor="@color/gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/followers" android:singleLine="true" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:id="@id/library_header_following_count" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/library_metadata_cell" />
        <TextView android:textSize="@dimen/text_caption" android:textColor="@color/gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/following" android:singleLine="true" />
    </LinearLayout>
</LinearLayout>