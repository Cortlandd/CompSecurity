<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/bg_white_full_opacity" style="@style/full_view"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.pinterest.ui.actionbar.ActionBar android:id="@id/actionbar" style="@style/ActionBar" />
    <LinearLayout android:orientation="vertical" style="@style/fullline_view">
        <TextView android:textSize="@dimen/text_display_small" android:textStyle="bold" android:textColor="@color/text_dark" android:paddingLeft="@dimen/margin" android:paddingTop="@dimen/margin" android:paddingRight="@dimen/margin_double" android:text="@string/already_on_pinterest" style="@style/fullline_view" />
        <TextView android:text="@string/enter_password" style="@style/signup_field_description" />
        <com.pinterest.ui.text.PEditText android:id="@id/password" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="textPassword" style="@style/GraySignupEditText" />
        <TextView android:textSize="@dimen/text_body" android:textColor="@color/text_brio_light" android:gravity="center" android:id="@id/forgot" android:paddingLeft="@dimen/margin" android:paddingTop="@dimen/margin_half" android:paddingRight="@dimen/margin" android:paddingBottom="@dimen/margin_double" android:text="@string/forgot_your_password" style="@style/fullline_view" />
        <Button android:id="@id/login_bt" android:text="@string/login" style="@style/button_red_full" />
    </LinearLayout>
</LinearLayout>