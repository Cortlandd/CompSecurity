<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:background="@color/gray_dark_transparent" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <View android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1.0" />
    <ImageButton android:id="@id/grid_button" android:background="@android:color/transparent" android:layout_width="@dimen/thumbnail_small_size" android:layout_height="@dimen/thumbnail_large_size" android:src="@drawable/ic_grid_off" android:scaleType="centerInside" />
    <View android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1.0" />
    <ImageButton android:id="@id/flash_button" android:background="@android:color/transparent" android:clickable="false" android:layout_width="@dimen/thumbnail_small_size" android:layout_height="@dimen/thumbnail_large_size" android:src="@drawable/ic_flash_off" android:scaleType="centerInside" android:contentDescription="@string/camera_flash" />
    <View android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1.0" />
    <ImageButton android:id="@id/switch_button" android:background="@android:color/transparent" android:clickable="false" android:layout_width="@dimen/thumbnail_small_size" android:layout_height="@dimen/thumbnail_large_size" android:src="@drawable/ic_camera_rear" android:scaleType="centerInside" android:contentDescription="@string/camera_switch" />
    <View android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1.0" />
</LinearLayout>