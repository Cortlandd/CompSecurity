<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/api_tv_controls_overlay_button_background" />
            <item>
                <bitmap android:gravity="center" android:src="@drawable/api_tv_control_info_select" />
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false">
        <layer-list>
            <item android:drawable="@drawable/api_tv_controls_overlay_button_background" />
            <item>
                <bitmap android:gravity="center" android:src="@drawable/api_tv_control_info" />
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item android:drawable="@drawable/api_tv_controls_overlay_button_background" />
            <item>
                <bitmap android:gravity="center" android:src="@drawable/api_tv_control_info_select" />
            </item>
        </layer-list>
    </item>
</selector>