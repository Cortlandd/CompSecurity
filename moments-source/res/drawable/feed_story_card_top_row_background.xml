<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:topLeftRadius="@dimen/feed_story_card_corner_radius" android:topRightRadius="@dimen/feed_story_card_corner_radius" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="@dimen/feed_story_card_corner_radius" android:topRightRadius="@dimen/feed_story_card_corner_radius" />
                    <solid android:color="@color/black_04a" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>