    <item android:state_selected="true">
        <layer-list>
            <item android:left="0.0dip" android:top="0.0dip" android:right="0.0dip" android:bottom="10.0dip">
                <shape android:shape="rectangle">
                    <solid android:color="@color/wish_payment_tab_background" />
