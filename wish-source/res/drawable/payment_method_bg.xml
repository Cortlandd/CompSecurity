<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/wish_textfield_light_border" />
            <stroke android:width="0.5dip" android:color="@color/wish_separator_color" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/wish_transparent" />
            <stroke android:width="0.5dip" android:color="@color/wish_separator_color" />
        </shape>
    </item>
</selector>