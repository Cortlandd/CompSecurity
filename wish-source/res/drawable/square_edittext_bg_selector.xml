<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/wish_highlighted_textfield_gradient_start" android:endColor="@color/wish_highlighted_textfield_gradient_end" android:angle="270.0" android:centerX="0.5" android:centerY="0.5" />
            <stroke android:width="1.0dip" android:color="@color/wish_highlighted_textfield_border" />
            <padding android:left="10.0dip" android:top="6.0dip" android:right="10.0dip" android:bottom="6.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/wish_white" />
            <stroke android:width="1.0dip" android:color="@color/wish_highlighted_textfield_border" />
            <padding android:left="10.0dip" android:top="6.0dip" android:right="10.0dip" android:bottom="6.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/wish_white" />
            <stroke android:width="1.0dip" android:color="@color/wish_textfield_border" />
            <padding android:left="10.0dip" android:top="6.0dip" android:right="10.0dip" android:bottom="6.0dip" />
        </shape>
    </item>
</selector>