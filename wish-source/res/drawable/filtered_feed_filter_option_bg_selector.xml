<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/wish_blue" />
            <stroke android:width="1.0px" android:color="@color/wish_blue" />
            <corners android:radius="15.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/wish_blue" />
            <stroke android:width="1.0px" android:color="@color/wish_blue" />
            <corners android:radius="15.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/wish_blue" />
            <stroke android:width="1.0px" android:color="@color/wish_blue" />
            <corners android:radius="15.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/wish_white" />
            <stroke android:width="1.0px" android:color="@color/wish_main_text" />
            <corners android:radius="15.0dip" />
        </shape>
    </item>
</selector>