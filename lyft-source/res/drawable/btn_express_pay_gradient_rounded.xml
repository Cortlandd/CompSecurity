    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3.0dip" />
            <gradient android:startColor="@color/blue_1" android:endColor="@color/green_1" android:angle="0.0" android:type="linear" />
        </shape>
    </item>
</selector>