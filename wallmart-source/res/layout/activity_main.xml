<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/root_view" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/webview_container" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <include android:id="@id/loading_view" android:visibility="gone" layout="@layout/loading_view" />
        <FrameLayout android:id="@id/webview_loading_view" android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </FrameLayout>
    <FrameLayout android:id="@id/screenshot_container" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ImageView android:id="@id/screenshot_view" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        <include android:id="@id/screenshot_loading_view" android:visibility="gone" layout="@layout/loading_view" />
    </FrameLayout>
</FrameLayout>